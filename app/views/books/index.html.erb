<h2>New book</h2>


<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

<% end %>
